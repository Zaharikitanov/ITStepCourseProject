@model IEnumerable<PostViewModel>

@foreach (var post in Model)
{

    <div class="post-preview">
        <a href="post.html">
            <h2 class="post-title">
                @post.Title 
            </h2>
            <h3 class="post-subtitle">
                @post.Content.Substring(0,60)
            </h3>
        </a>
        <p class="post-meta">Posted by <a href="#">@post.Author</a> @post.CreatedOn</p>
    </div>
    <hr>
}
